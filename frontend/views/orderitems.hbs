{{> nav}}

<h1>Manage Order Items</h1>

<h2>Sample Order Items</h2>
<table border="1">
    <tr>
      <th>Order Item ID</th>
      <th>Order ID</th>
      <th>Order Date</th>
      <th>Product ID</th>
      <th>Model</th>
      <th>Price</th>
      <th>Quantity</th>
    </tr>
    {{#each orderitems}}
    <tr>
      <td>{{orderItemID}}</td>
      <td>{{orderID}}</td>
      <td>{{orderDate}}</td>
      <td>{{productID}}</td>
      <td>{{model}}</td>
      <td>{{price}}</td>
      <td>{{quantity}}</td>
    </tr>
    {{/each}}
</table>

<hr>

<h2>Add Order Item</h2>
<form action="/orderitems/add" method="POST">
  <label for="orderID">Order:</label>
  <select name="orderID" required>
    {{#each orders}}
      <option value="{{this.orderID}}">Order #{{this.orderID}} - {{this.orderDate}}</option>
    {{/each}}
  </select>

  <label for="productID">Product:</label>
  <select name="productID" required>
    {{#each products}}
      <option value="{{this.productID}}">{{this.model}}</option>
    {{/each}}
  </select>

  <label for="quantity">Quantity:</label>
  <input type="number" name="quantity" min="1" required>

  <button type="submit">Add to Order</button>
</form>

<hr>

<h2>Update Order Item</h2>
<form>
  <label>Order ID: <input type="number" name="order_id"></label><br>
  <label>Product ID: <input type="number" name="product_id"></label><br>
  <label>New Quantity: <input type="number" name="new_quantity"></label><br>
  <button type="submit">Update</button>
</form>

<hr>

<h2>Delete Order Item</h2>
<form>
  <label>Order ID: <input type="number" name="order_id"></label><br>
  <label>Product ID: <input type="number" name="product_id"></label><br>
  <button type="submit">Delete</button>
</form>
