<!-- Customers page -->

<h1>Manage Customers</h1>

<h2>Existing Customers</h2>
<table border="1">
  <tr>
    <th>Customer ID</th>
    <th>Email</th>
    <th>Street Address</th>
    <th>Phone Number</th>
  </tr>
  {{!
