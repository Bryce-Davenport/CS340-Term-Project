  {{#each customers}}
      <tr>
        <td>{{customerID}}</td>
        <td>{{email}}</td>
        <td>{{streetAddress}}</td>
        <td>{{phoneNumber}}</td>
      </tr>
  {{/each}}
</table>

<h2>Add New Customer</h2>
<form method="POST" action="/customers/add">
  <label>Email:</label>
  <input type="email" name="email" required>

  <label>Street Address:</label>
  <input type="text" name="streetAddress" required>

  <label>Phone Number:</label>
  <input type="tel" name="phoneNumber">

  <button type="submit">Add Customer</button>
</form>

<h2>Update Existing Customer</h2>
<form action="/customers/update" method="POST">
  <label for="customerID">Select Customer:</label>
  <select name="customerID" required>
    {{#each customers}}
      <option value="{{customerID}}">
        #{{customerID}} - {{email}}
      </option>
    {{/each}}
  </select>

  <label for="email">New Email:</label>
  <input type="email" name="email" required>

  <label for="phoneNumber">New Phone Number:</label>
  <input type="text" name="phoneNumber" required>

  <button type="submit">Update Customer</button>
</form>

<h2>Delete Customer</h2>
<form action="/customers/delete" method="POST">
  <label for="customerID">Select Customer:</label>
  <select name="customerID" required>
    {{#each customers}}
      <option value="{{customerID}}">
        #{{customerID}} - {{email}}
      </option>
    {{/each}}
  </select>

  <button type="submit" style="background-color: #c0392b; color: white;">
    Delete Customer
  </button>
</form>
